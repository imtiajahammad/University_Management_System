
@{
    ViewBag.Title = "AssignTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var departments = ViewBag.Departments;
    var teachers= ViewBag.Teachers;
    var courseCodes = ViewBag.CourseCodeList;

}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width", initial-scale="1" />


    <link href="~/bootstrap-3.3.7/css/bootstrap.min.css" rel="stylesheet" />


</head>
<body>
    <br />
    <br />
    @*<h2 class="text-primary" align="center">Course Assign to Teacher</h2>*@
    <div align="center">
        @if (ViewBag.Message != null)
        {
            <span id="success-alert">@ViewBag.Message</span>
        }
    </div>
    <br />
    <div class="col-md-offset-1 col-md-10">
        <div class="panel panel-default">
            <div class="panel-heading  ">
                <h2 class="panel-title">Assign Teacher To Course</h2>
            </div>
            <div class="panel-body  ">
                <div>
                    <div class="container   ">
                        <div class="row col-md-12">
                            <form method="post" action="AssignTeacher" class="form-horizontal col-md-12">
                                <div class="form-group col-md-12">
                                    <label class="control-label col-md-2">Department:</label>
                                    <div class="col-md-10">
                                        <select class="form-control" required name="department" id="departmentDropdownId">
                                            <option value=0>Choose a department</option>
                                            @foreach (var a in departments)
                                            {
                                                <option value="@a.departmentCode">@a.departmentCode</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label class="control-label col-md-2">Teacher:</label>
                                    <div class="col-md-10">
                                        <select class="form-control" required name="teacher" id="teacherDropdownId">
                                            <option value=0>Select a teacher</option>
                                            @foreach (var a in teachers)
                                            {
                                                <option value="@a.teacherName">@a.teacherName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label class="control-label col-md-2">Credit to be taken:</label>
                                    <div class="col-md-10"><input class="form-control" required name="teacherCreditToBeTaken" disabled id="creditTakenId" @*value="@teacherCreditToBeTaken"*@ /></div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label class="control-label col-md-2">Remaining Credit:</label>
                                    <div class="col-md-10"><input class="form-control" required name="teacherRemainingCredit" disabled id="remainingCreditId" @*value="@teacherRemainingCredit"*@ /></div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label class="control-label col-md-2 ">Course Code:</label>
                                    <div class="col-md-10">
                                        <select class="form-control" required name="courseCode" id="courseCodeId">
                                            <option value=0>Select a Course Code</option>
                                            @foreach (var a in courseCodes)
                                            {
                                                <option value="@a.courseCode">@a.courseCode</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label class="control-label col-md-2">Name</label>
                                    <div class="col-md-10"><input class="form-control" name="courseName" disabled id="courseNameId" @*value="@courseName"*@ /></div>
                                </div>


                                <div class="form-group col-md-12">
                                        <label class="col-md-2 control-label">Credit</label>
                                        <div class="col-md-10"><input class="form-control" name="courseCredit" disabled id="courseCreditId" @*value="@courseCredit"*@ /></div>
                                </div>

                                <div class="form-group col-md-12">
                                    <div class="col-md-4 col-md-offset-8 col-xs-6 col-xs-offset-6  btn-group">
                                        <input class="btn btn-default col-md-6 col-xs-6" type="button" value="view list" onclick="location.href='@Url.Action("ViewAllCourses", "Course")'" />
                                        <input class="btn btn-default col-md-6 col-xs-6" type="submit" value="Assign" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


