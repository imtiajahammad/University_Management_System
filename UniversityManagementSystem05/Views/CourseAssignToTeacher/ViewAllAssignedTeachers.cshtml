@using UniversityManagementSystem05.Models;
@{
    ViewBag.Title = "ViewAllAssignedTeachers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<CourseAssignToTeacherModel> list = ViewBag.CourseAssignToTeacherModelList;
}

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />


    <link href="~/bootstrap-3.3.7/css/bootstrap.min.css" rel="stylesheet" />


    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>


    <link href="~/customDesign/css/ViewDepartmentsCss.css" rel="stylesheet" />
</head>
<body>
    <br />
    <br />
    <h2 align="center">View All Assigned Teachers</h2>
    <div align="center">
        @if (ViewBag.MessageViewAssignedTeachers != null)
        {
            <span>@ViewBag.MessageViewAssignedTeachers</span>
        }
    </div>
    <div class="container">
        <div class="col-lg-12">
            <div>
                @if (list.Count != 0)
                {
                    <form method="get" action="ViewAllAssignedTeachers">
                        <fieldset>
                            <legend class="text-primary"> Assigned Teachers with their properties </legend>
                        </fieldset>
                        <div>
                            <table class="table table-bordered table-hover table-condensed table-striped" align="center">
                                <tr>
                                    <th class="info"><div class="text-center">Department </div></th>
                                    <th class="info"><div class="text-center">Teacher</div></th>
                                    <th class="info"><div class="text-center">Credit to be taken</div></th>
                                    <th class="info"><div class="text-center">Remaining Credit</div></th>
                                    <th class="info"><div class="text-center">Course Code </div></th>
                                    <th class="info"><div class="text-center">Course Name </div></th>
                                </tr>
                                @foreach (CourseAssignToTeacherModel aCourseAssignToTeacherModel in list)
                                {
                                    <tr>
                                        <td align="center">@aCourseAssignToTeacherModel.Department.DepartmentName</td>
                                        <td align="center">@aCourseAssignToTeacherModel.Teacher.TeacherName</td>
                                        <td align="center">@aCourseAssignToTeacherModel.Teacher.TeacherCreditToBeTaken</td>
                                        <td align="center">@aCourseAssignToTeacherModel.Course.courseCode</td>

                                        <td align="center">@aCourseAssignToTeacherModel.Course.courseName</td>

                                        <td align="center">@aCourseAssignToTeacherModel</td>

                                        <td align="center"> <a href="@Url.Action("EditAssignedTeacher", "CourseAssignToTeacher", new { courseId=aCourseAssignToTeacherModel.CourseAssignToTeacherId})">Edit</a> | <a href="@Url.Action("DeleteAssignedTeacher", "CourseAssignToTeacher", new { courseId=aCourseAssignToTeacherModel.CourseAssignToTeacherId})">Delete</a> </td>
                                    </tr>
                                }
                            </table>
                        </div>

                    </form>
                }
            </div>
        </div>
    </div>

</body>
</html>

