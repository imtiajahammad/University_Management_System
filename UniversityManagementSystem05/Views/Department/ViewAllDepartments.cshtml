@using UniversityManagementSystem05.Models;
@{
    ViewBag.Title = "ViewAllDepartments";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<DepartmentModel> list = ViewBag.DepartmentList;
}
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    @*<title>Bootstrap 101 Template</title>*@

    <!-- Bootstrap -->

    <link href="~/bootstrap-3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="~/customDesign/css/ViewDepartmentsCss.css" rel="stylesheet" />

</head>
<body>
    <br />
    <br />
    <h2 align="center">View All Departments</h2>
    <div align="center">
        @if (ViewBag.MessageViewDepartments != null)
        {
            <span>@ViewBag.MessageViewDepartments</span>
        }
        <br />

    </div>


    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div  >
                    @if (list.Count != 0)
                    {
                        <form method="get" action="ViewAllDepartments">
                            <fieldset>
                                <legend class="text-primary">Deparments with Code and Name</legend>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover table-condensed table-striped" align="center">
                                        <tr>
                                            <th class="info" > <div class="text-center ">Deparment Code</div> </th>
                                            <th class="info" ><div class="text-center">Deparment Name</div></th>
                                            <th class="info"  ><div class="text-center ">Action</div></th>
                                        </tr>
                                        @foreach (DepartmentModel aDepartmentModel in list)
                {
                                            <tr>
                                                <td align="center" > @aDepartmentModel.DepartmentCode </td>
                                                <td align="center"> @aDepartmentModel.DepartmentName </td>
                                                <td align="center"> <a href="@Url.Action("EditDepartmentFromList", "Department", new { DepartmentId=aDepartmentModel.DepartmentId})">Edit</a> | <a href="@Url.Action("DeleteDepartmentFromList", "Department", new { DepartmentId=aDepartmentModel.DepartmentId})">Delete</a> </td>
                                            </tr>
                                        }

                                    </table>
                                </div>
                            </fieldset>
                        </form>

                    }

                </div>
            </div>
        </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/bootstrap-3.3.7/js/bootstrap.min.js"></script>

</body>
</html>



