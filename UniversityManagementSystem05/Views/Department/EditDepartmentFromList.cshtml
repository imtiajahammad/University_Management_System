    <div class="col-lg-offset-1 col-md-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Edit Department</h2>
            </div>
            <div class="panel-body">
                <div>
                    <div class="container   ">
                        <div class="row col-md-12">
                            <form method="post" action="EditDepartmentFromList"  class="form-horizontal col-md-12">

                                <input type="hidden" name="departmentId" value="@Model.DepartmentId" />



                                
                                <div class="form-group col-md-12">
                                    <label class="control-label col-md-2">Department Code</label>
                                    <div class="col-md-10"><input class="form-control" type="text" maxlength="7" minlength="2" name="DepartmentCode"  value="@Model.DepartmentCode" required /> </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label class="control-label col-md-2">department name:</label>
                                    <div class="col-md-10"><input class="form-control" type="text" name="Departmentname" value="@Model.DepartmentName" required /> </div>
                                </div>

                                <div class="form-group col-md-12">

                                    <div class="col-md-4 col-md-offset-8 col-xs-6 col-xs-offset-6  btn-group">
                                        <input class="btn btn-default col-md-6 col-xs-6" type="button" value="Cancel" onclick="location.href='@Url.Action("ViewAllDepartments", "Department")'" />
                                        <input class="btn btn-default col-md-6 col-xs-6" type="submit" value="Update" />
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    
