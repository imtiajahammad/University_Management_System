@using UniversityManagementSystem05.Models;
@{
    ViewBag.Title = "ViewAllCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<CourseModel> list = ViewBag.CourseList;
}


<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
     

    <link href="~/bootstrap-3.3.7/css/bootstrap.min.css" rel="stylesheet" />


    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js" ></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>


    <link href="~/customDesign/css/ViewDepartmentsCss.css" rel="stylesheet" />

</head>
<body>
    <br />
    <br />
    <h2 align="center" >View All Courses</h2>
    <div align="center">
        @if (ViewBag.MessageViewCourses != null)
        {
            <span>@ViewBag.MessageViewCourses</span>
        }
        <br />

    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div>
                    @if(list.Count != 0)
                    {
                        <form method="get" action="ViewAllCourses">
                            <fieldset>
                                <legend class="text-primary">Courses with their properties</legend>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover table-condensed table-striped" align="center">
                                        <tr>
                                            <th class="info"><div class="text-center">Course Code </div></th>
                                            <th class="info"><div class="text-center">Course Name </div></th>
                                            <th class="info"><div class="text-center">Course Credit</div></th>
                                            <th class="info"><div class="text-center">Course Description </div></th>
                                            <th class="info"><div class="text-center">Course Department </div></th>
                                            <th class="info"><div class="text-center">Course Semester </div></th>
                                            <th class="info"><div class="text-center ">Action</div></th>
                                        </tr>
                                        @foreach(CourseModel aCourseModel in list)
                                        {
                                            <tr>
                                                <td align="center">@aCourseModel.courseCode</td>
                                                <td align="center">@aCourseModel.courseName</td>
                                                <td align="center">@aCourseModel.courseCredit</td>
                                                <td align="center">@aCourseModel.courseDescription</td>

                                                <td align="center">@aCourseModel.Department.DepartmentName</td>
                                                
                                                <td align="center">@aCourseModel.Semester.semesterName</td>
                                                
                                                <td align="center"> <a href="@Url.Action("EditCourseFromList", "Course", new { courseId=aCourseModel.courseId})">Edit</a> | <a href="@Url.Action("DeleteCourseFromList", "Course", new { courseId=aCourseModel.courseId})">Delete</a> </td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </fieldset>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/bootstrap-3.3.7/js/bootstrap.min.js"></script>

</body>

</html>


