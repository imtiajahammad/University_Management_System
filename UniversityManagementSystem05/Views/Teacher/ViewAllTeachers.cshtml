@using UniversityManagementSystem05.Models;
@{
    ViewBag.Title = "ViewAllTeachers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<TeacherModel> list=ViewBag.TeacherList;
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link href="~/bootstrap-3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <link href="~/customDesign/css/ViewDepartmentsCss.css" rel="stylesheet" />
</head>
<body>
    <br />
    <br />
    <h2 align="center">View All Teachers</h2>
    <div align="center">
        @if (ViewBag.Message != null)
        {
            <span>@ViewBag.Message</span>
        }
        <br />

    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div>
                    @if (list.Count != 0)
                    {
                        <form method="get" action="ViewAllTeachers">
                            <fieldset>
                                <legend class="text-primary">Teachers with their properties</legend>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover table-condensed table-striped" align="center">
                                        <tr>
                                            <th class="info"><div class="text-center">Teacher Name </div></th>
                                            <th class="info"><div class="text-center">Teacher Address </div></th>
                                            <th class="info"><div class="text-center">Teacher Email</div></th>
                                            <th class="info"><div class="text-center">Teacher Number</div></th>
                                            <th class="info"><div class="text-center">Teacher Designation</div></th>
                                            <th class="info"><div class="text-center">Teacher Department</div></th>
                                            <th class="info"><div class="text-center">Teacher Credit to be taken</div></th>
                                            <th class="info"><div class="text-center ">Action</div></th>
                                        </tr>
                                        @foreach (TeacherModel aTeacherModel in list)
                                        {
                                        <tr>
                                            <td align="center">@aTeacherModel.teacherName</td>
                                            <td align="center">@aTeacherModel.teacherAddress</td>
                                            <td align="center">@aTeacherModel.teacherEmail</td>
                                            <td align="center">@aTeacherModel.teacherNumber</td>
                                            <td align="center">@aTeacherModel.teacherDesignation</td>
                                            <td align="center">@aTeacherModel.teacherDepartment</td>
                                            <td align="center">@aTeacherModel.teacherCreditToBeTaken</td>
                                            <td align="center"> <a href="@Url.Action("EditTeacherFromList", "Teacher", new { teacherId=aTeacherModel.teacherId})">Edit</a> | <a href="@Url.Action("DeleteTeacherFromList", "Teacher", new { teacherId=aTeacherModel.teacherId})">Delete</a> </td>
                                        </tr>
                                        }
                                    </table>
                                </div>
                            </fieldset>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/bootstrap-3.3.7/js/bootstrap.min.js"></script>

</body>

</html>


