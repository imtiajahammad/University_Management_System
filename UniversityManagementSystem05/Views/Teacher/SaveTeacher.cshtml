
@{
    ViewBag.Title = "SaveTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var designations= ViewBag.designations;
    var departments= ViewBag.departments;
}

<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    @*<title>Bootstrap 101 Template</title>*@

    <!-- Bootstrap -->

    <link href="~/bootstrap-3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="~/customDesign/css/ViewDepartmentsCss.css" rel="stylesheet" />
</head>
<body>
    <br />
    <br />






    <div align="center">
        @if (@ViewBag.Message != null)
        {
            <span id="success-alert">@ViewBag.Message</span>}
    </div>

    <br />

    <div class="col-md-offset-1 col-md-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Save Teacher</h2>
            </div>
            <div class="panel-body">
                <div class="container  ">
                    <div class="row col-md-12">
                        <form method="post" action="SaveTeacher" class="form-horizontal col-md-12">
                            <div class="form-group col-md-12">
                                <label class="control-label col-md-2">Teacher Name</label>
                                <div class="col-md-10"><input placeholder="Enter Teacher Name" class="form-control" type="text" minlength="5" name="teacherName" required /> </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label class="control-label col-md-2">Teacher Address</label>
                                <div class="col-md-10"><input class="form-control" type="text" name="teacherAddress" required /></div>
                            </div>
                            <div class="form-group col-md-12">
                                <label class="control-label col-md-2">Teacher Email</label>
                                <div class="col-md-10">  <input class="form-control" type="email" name="teacherEmail" max="5.0" min="0.5" step="0.5" required />  </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label class="control-label col-md-2">Teacher Number </label>
                                <div class="col-md-10">
                                    <input class="form-control" type="tel" name="teacherNumber" required />
                                </div>
                            </div>

                            <div class="form-group col-md-12">
                                <label class="control-label col-md-2 ">Teacher Designation</label>
                                <div class="col-md-10">
                                    <select class="form-control" required name="teacherDesignation">
                                        <option></option>
                                        @foreach (string a in designations)
                                        {
                                            <option value="@a">@a</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label class="control-label col-md-2">Department</label>
                                <div class="col-md-10">
                                    <select class="form-control" required name="teacherDepartment ">
                                        <option></option>
                                        @foreach (var aDepartmentModel in departments)
                                        {
                                            <option value="@aDepartmentModel.departmentName">@aDepartmentModel.departmentName</option>
                                        }
                                        @*  <option value="volvo">Volvo</option><option value="saab">Saab</option><option value="mercedes">Mercedes</option><option value="audi">Audi</option>*@
                                    </select>
                                </div>
                            </div>

                            <div class="form-group col-md-12">
                                <label class="control-label col-md-2">Credit to be taken </label>
                                <div class="col-md-10">
                                    <textarea class="form-control" type="number"  min="0" name="teacherCreditToBeTacken" rows="3"></textarea>  @*<input class="form-control" type="text" name="courseCredit" max="5.0" min="0.5" step="0.5" required />*@
                                </div>
                            </div>

                            <div class="form-group col-md-12">
                                <div class="col-md-4 col-md-offset-8 col-xs-6 col-xs-offset-6  btn-group">
                                    <input class="btn btn-default col-md-6 col-xs-6" type="button" value="view listT" onclick="location.href='@Url.Action("ViewAllCourses", "Course")'" />
                                    <input class="btn btn-default col-md-6 col-xs-6" type="submit" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    
    
    @*</div>*@

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/bootstrap-3.3.7/js/bootstrap.min.js"></script>

</body>

</html>
